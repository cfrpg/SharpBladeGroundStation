<UserControl x:Class="FlightDisplay.MapScaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Viewbox>
        <Canvas Height="30" Width="200">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="200m" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
            <Border VerticalAlignment="Center" Width="200" Height="15" Canvas.Left="0" Canvas.Top="15" BorderThickness="3,0,3,3" BorderBrush="Black"/>
        </Canvas>
    </Viewbox>
</UserControl>
