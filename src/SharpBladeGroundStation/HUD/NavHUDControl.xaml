<local:HUDBase x:Class="SharpBladeGroundStation.HUD.NavHUDControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpBladeGroundStation.HUD"
             xmlns:fd="clr-namespace:FlightDisplay;assembly=FlightDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Viewbox>
        <Canvas Width="500" Height="500">
            <fd:HeadingIndicatorControl x:Name="heading" Width="280" Height="30" Canvas.Top="20" Canvas.Left="110" Heading="{Binding Heading}" Loaded="heading_Loaded"/>
        </Canvas>
    </Viewbox>
</local:HUDBase>
